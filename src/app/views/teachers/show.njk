{% extends "layout.njk" %}

{% block content %}

  <div class="card">
    <section 
      class="avatar"
      style="background:url({{teacher.avatar_url}}) no-repeat center center / cover" 
    >

    </section>

    <section class="details">
      <h3>Detalhes</h3>

      <div class="item">
        <div>Professor</div>
        <div>{{teacher.name}}</div>        
      </div>

      <div class="item">
        <div>Idade</div>
        <div>{{teacher.age}}</div>
      </div>

      <div class="item">
        <div>Graduação</div>
        <div>{{teacher.education_level }}</div>
      </div>

      <div class="item">
        <div>Modalidade</div>
        <div>   
          <span>{{ teacher.subjects_taught }}</span>    
        </div>
      </div>

      <div class="item">
        <div>Matérias</div>
        <div>
           {{ teacher.class_type }}        
        </div>
      </div>

      <div class="item">
        <div>Total de alunos</div>
        <div>
           {{ teacher.total_students }}        
        </div>
      </div>

      <div class="item">
        <div>Desde de</div>
        <div>{{teacher.created_at}}</div>
      </div>

      <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>

    </section>
  </div>
  
{% endblock content %}
