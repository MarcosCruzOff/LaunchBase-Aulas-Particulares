{% extends "layout.njk" %}

{% block content %}

  <div class="card tabela-conteiner">
  
  <table width="100%">
    <a href="/teachers/create">Novo</a>
    <!--CABEÇALHO DA TABELA-->
    <thead>
      <tr>        
        <th>Instrutor</th>
        <th>Matérias</th>
        <th>Ação</th>
      </tr>
    </thead>
    <!--CORPO DA TABELA-->
    <tbody>
      {% for teacher in teachers %}

        <tr>
          
          <td>
            <span style="background-image:url({{teacher.avatar_url}})"></span>
            {{teacher.name}}
          </td>

          <td data-label="Matérias"> {{teacher.class_type}} </td>

          <td><a href="/teachers/{{teacher.id}}">ver</a></td>

        </tr>

      {% endfor %}

    </tbody>

  </table>  
    
  </div>
  
{% endblock content %}
